<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="700.0" stylesheets="@AddPatientView.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clinique.controller.AddPatientController">
    
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="dialog-header">
            <Label styleClass="dialog-title" text="Nouveau Patient" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleCancel" styleClass="btn-close" text="X" />
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox spacing="20.0" styleClass="dialog-content">
                <padding>
                    <Insets bottom="20" left="30" right="30" top="20" />
                </padding>

                <GridPane hgap="20" styleClass="form-grid" vgap="15">
                    
                    <Label styleClass="field-label required" text="Nom Complet" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="nomField" promptText="Ex: Jean Dupont" styleClass="input-field" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                    <Label styleClass="field-label required" text="Age" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="ageField" promptText="35" styleClass="input-field" GridPane.columnIndex="0" GridPane.rowIndex="3" />

                    <Label styleClass="field-label required" text="Genre" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <ComboBox fx:id="genreCombo" maxWidth="Infinity" promptText="Selectionner" styleClass="input-field" GridPane.columnIndex="0" GridPane.rowIndex="5" />

                    <Label styleClass="field-label required" text="Email" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                    <TextField fx:id="emailField" promptText="exemple@email.com" styleClass="input-field" GridPane.columnIndex="0" GridPane.rowIndex="7" />

                    <Label styleClass="field-label required" text="Telephone" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                    <TextField fx:id="telephoneField" promptText="+216 XX XXX XXX" styleClass="input-field" GridPane.columnIndex="0" GridPane.rowIndex="9" />

                    <Label styleClass="field-label" text="Adresse" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <TextArea fx:id="adresseArea" prefHeight="80.0" promptText="Adresse complete" styleClass="input-field textarea-field" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.rowSpan="2" />

                    <Label styleClass="field-label urgent" text="Contact Urgence - Nom" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <TextField fx:id="contactUrgenceNomField" promptText="Nom du contact" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <Label styleClass="field-label urgent" text="Contact Urgence - Telephone" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    <TextField fx:id="contactUrgenceTelField" promptText="Telephone urgence" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                    <Label styleClass="field-label" text="Contact Urgence - Relation" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                    <TextField fx:id="contactUrgenceRelationField" promptText="Ex: Conjoint" styleClass="input-field" GridPane.columnIndex="1" GridPane.rowIndex="8" />

                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="280" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="280" />
                    </columnConstraints>
                    
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>

                <Label fx:id="errorLabel" styleClass="message error" visible="false" wrapText="true" />
                <Label fx:id="successLabel" styleClass="message success" visible="false" wrapText="true" />
                
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15.0" styleClass="dialog-footer">
            <Button onAction="#handleSave" prefWidth="160" styleClass="btn-primary" text="Enregistrer" />
            <Button onAction="#handleReset" prefWidth="120" styleClass="btn-secondary" text="Reinitialiser" />
            <Button onAction="#handleCancel" prefWidth="100" styleClass="btn-cancel" text="Annuler" />
        </HBox>
    </bottom>

</BorderPane>