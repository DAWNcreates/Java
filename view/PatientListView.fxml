<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="500.0" prefWidth="800.0">
    
    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" 
              style="-fx-background-color: linear-gradient(to right, #2e7d32, #1b5e20); -fx-padding: 15 30;">
            
            <!-- Logo et titre -->
            <HBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                <Label text="ðŸŒ¿" style="-fx-font-size: 30px;"/>
                <Label text="Monstera Clinic" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            </HBox>
            
            <!-- Info utilisateur et dÃ©connexion -->
            <HBox alignment="CENTER" spacing="15.0">
                <Label fx:id="userInfoLabel" text="Dr. Admin" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                <Button text="DÃ©connexion" 
                        style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 20;"/>
            </HBox>
        </HBox>
    </top>
    
    <!-- Contenu principal -->
    <center>
        <VBox spacing="15.0" style="-fx-background-color: #f5f5f5;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Titre et barre d'outils -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Label text="Gestion des Patients" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <!-- Barre de recherche -->
                <TextField fx:id="searchField" promptText="ðŸ” Rechercher..." prefWidth="250.0" prefHeight="35.0"
                          style="-fx-border-color: #e0e0e0; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14px;"/>
                
                <!-- Boutons d'action -->
                <Button text="âž• Ajouter" prefHeight="35.0" prefWidth="100.0"
                        style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
                
                <Button text="âœï¸ Modifier" fx:id="editButton" disable="true" prefHeight="35.0" prefWidth="100.0"
                        style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
                
                <Button text="ðŸ—‘ï¸ Supprimer" fx:id="deleteButton" disable="true" prefHeight="35.0" prefWidth="110.0"
                        style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
            </HBox>
            
            <!-- Tableau des patients -->
            <TableView fx:id="patientTable" VBox.vgrow="ALWAYS" 
                       style="-fx-background-color: white; -fx-background-radius: 10;">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="nomColumn" text="Nom Complet" prefWidth="150"/>
                    <TableColumn fx:id="ageColumn" text="Ã‚ge" prefWidth="60"/>
                    <TableColumn fx:id="genreColumn" text="Genre" prefWidth="80"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="180"/>
                    <TableColumn fx:id="telephoneColumn" text="TÃ©lÃ©phone" prefWidth="120"/>
                    <TableColumn fx:id="actionColumn" text="Actions" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    
    <!-- Footer avec statistiques -->
    <bottom>
        <HBox spacing="30.0" alignment="CENTER" 
              style="-fx-padding: 12; -fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
            
            <VBox alignment="CENTER" spacing="3">
                <Label text="Total Patients" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
                <Label fx:id="totalPatientsLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
            </VBox>
            
            <Separator orientation="VERTICAL" prefHeight="35"/>
            
            <VBox alignment="CENTER" spacing="3">
                <Label text="Nouveaux ce mois" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
                <Label fx:id="newPatientsLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #66bb6a;"/>
            </VBox>
            
            <Separator orientation="VERTICAL" prefHeight="35"/>
            
            <VBox alignment="CENTER" spacing="3">
                <Label text="Sessions actives" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
                <Label fx:id="activeSessionsLabel" text="0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0288d1;"/>
            </VBox>
        </HBox>
    </bottom>
</BorderPane>